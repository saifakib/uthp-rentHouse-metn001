<%-include('../../partials/head.ejs')%>


<div id="titlebar" class="property-titlebar margin-bottom-0">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="property-title">
                    <div class="row">
                        <div class="col-md-9">
                            <h2> <%= targetTenant.firstName +" "+ targetTenant.lastName %></h2>
                            <span>
                                <b>Email</b>: <%= targetTenant.email %>
                            </span>
                            <span>
                                <b>Mobile No</b>: <%= targetTenant.mobile %>
                            </span>
                            <span>
                                <b>Category</b>: <%= targetTenant.house.category.name %>
                            </span>
                            <span>
                                <b>Registered</b>: <%= targetTenant.createdAt %>
                            </span>
                            <br>
                        </div>
                    </div>
                </div>
                <div class="property-pricing">
                    <div class="property-price"> <br> <%= targetTenant.house.price %>/- BDT </div>
                    <div class="sub-price"> Per Month </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-7">
            <div class="property-description">
                <h3 class="desc-headline">House Location</h3>
                <ul class="property-features margin-top-0" style="columns: 1; -webkit-columns: 1;">
                    <li style="margin: 0 0 7px 0;"><b>Short Address : </b><%= targetTenant.house.short_address %></li>
                </ul>
                <ul class="property-features margin-top-0">
                    <li><b>Property Id : </b><span>
                            <%= targetTenant.house.post_id && targetTenant.house.post_id %></span></li>
                    <li><b>Area Name : </b> <span> <%= targetTenant.house.area_id.name %></span></li>
                    <li><b>District Name :</b> <span> <%= targetTenant.house.area_id.location_name %></span></li>
                </ul>
                <h3 class="desc-headline">Transaction</h3>
                <ul>
                    <li>Stayed: <%= totalMonth %> months</li>
                    <li>Total Target Payment : <%= totalTargetPayment %>/- </li>
                    <li>Total Payment Amount <%= totalPaymentAmount %>/- </li>
                    <li>Due Amount <%= dues %>/- </li>
                </ul>
                <table class="manage-table responsive-table">
                    <tr>
                        <th>Date</th>
                        <th>Invoice</th>
                        <th>Payment</th>
                    </tr>
                    <% if(totalPaymentList.length > 0 ) { 
                        for(let payment of totalPaymentList) { %>
                    <tr>
                        <td> <%= payment.createdAt %> </td>

                        <td> <%= payment.invoice %> </td>
                        <td> <%= payment.amount %>/-</td>
                    </tr>
                    <%} } else { %>
                    <tr>
                        <p style="text-align: center; font-size: 20px">There Is No Payment Till Now</p>
                    </tr>
                    <% } %>
                </table>

                <div class="margin-top-50"></div>

            </div>
        </div>

    </div>
</div>

<%- include('../../partials/footer.ejs')%>