<%-include('../../partials/head.ejs')%>

<div id="wrapper">

    <%-include('../../partials/navigation.ejs')%>

</div>
<div id="titlebar">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2> Payment List </h2>
                <nav id="breadcrumbs">
                    <ul>
                        <li><a href="https://www.thetolet.com/en/"> Home</a></li>
                        <li> Payment List </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <table class="manage-table responsive-table">
                <tr>
                    <th>Date</th>
                    <th>Tenant</th>
                    <th>Invoice</th>
                    <th>Payment</th>
                    <th>Action</th>
                </tr>
                <% if(paymentList.length > 0 ) { 
                for(let payment of paymentList) { %>
                <tr>
                    <td> <%= payment.createdAt %> </td>
                    <td>
                        <h4>
                            <%= payment.tenant.firstName +" "+ payment.tenant.lastName%>
                        </h4>
                    </td>

                    <td> <%= payment.invoice %> </td>
                    <td> <%= payment.amount %>/-</td>
                    <td>
                        <a href="/hw/payment/edit?payment_id=<%= payment._id%>"></i> View</a>
                    </td>
                </tr>
                <%} } else { %>
                <tr>
                    <p style="text-align: center; font-size: 20px">There Is No Payment Till Now</p>
                </tr>
                <% } %>
            </table>
        </div>

        <%- include('./sideBar.ejs')%>

    </div>
</div>


<%- include('../../partials/footer.ejs')%>